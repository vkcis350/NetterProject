<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/toggle_activities"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onToggleActivityClick"
        android:orientation="horizontal"
        android:text="@string/toggleActivityFull" />

    <TextView
        android:id="@+id/activity_list_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activitylistPart" />

    <ListView
        android:id="@+id/activity_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1.0" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/add_activity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAddActivityClick"
                android:text="Add" />

            <Button
                android:id="@+id/delete_activity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRemoveActivityClick"
                android:text="Remove" />

            <Button
                android:id="@+id/select_activity_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onSelectActivityClick"
                android:text="View Students" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>